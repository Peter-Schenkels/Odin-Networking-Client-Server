{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Odin",
        "dependsOn": [
            "SERVER DEBUG",
            "CLIENT DEBUG"
        ]
      },
      {
        "label": "SERVER DEBUG",
        "type": "shell",
        "command": "odin.exe",
        "args": [
          "run",
          "${workspaceFolder}",
          "-define:IS_SERVER=true",
          "-debug",
          "-out:build-server/server.exe",
          "-show-timings",
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        }
      },
      {
        "label": "CLIENT DEBUG",
        "type": "shell",
        "command": "odin.exe",
        "args": [
          "run",
          "${workspaceFolder}",
          "-define:IS_SERVER=false",
          "-debug",
          "-out:build/client.exe",
          "-show-timings",
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        }
      }

      
    ]
  }